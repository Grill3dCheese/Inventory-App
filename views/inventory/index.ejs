<%- include('../partials/inventoryHeader'); -%>

<div class="container-fluid">
	<div class="row justify-content-center mt-3 mb-0">
		<div class="col-8">
			<form action="/inventory" method="GET">
				<div class="sForm">
					<input class="form-control" type="text" name="search" id="search" required />
					<label class="form-control-placeholder" for="search">Tags Search</label>
				</div>
				<button type="submit"><i class="fas fa-search"></i></button>
			</form>
		</div>
		<div class="col-4 px-0 text-center">
			<!-- <a class="btn border-0 blueDreamsLin mt-4 py-2 px-3" href="/inventory/new" role="button">
				<i class="fas fa-search"></i
			></a> -->
			<a class="btn border-0 stPat-gradient mt-4 py-2 px-3" href="/inventory/new" role="button">
				<i class="fas fa-plus"></i
			></a>
		</div>
		</div>
	<div class="row">
		<% items.reverse().forEach(function(item){ %>
		<div class="col-6 col-md-4 col-lg-2 col-xl-1">
			<div class="item-card card-overlay slender mb-1">
				<div class="view view-overlay">
					<img class="card-img-top" src="<%= item.image %>" />
				</div>
				<div class="item-body text-center">
					<h4 class="card-title">
						<%= item.name %>
					</h4>
					<%if (item.quantity === 0) { %>
					<p class="quantity dangerText justify-content-end">
						<%= item.quantity %> available
					</p>
					<% } else if (item.quantity <= 2) { %>
					<p class="quantity warningText justify-content-end">
						<%= item.quantity %> available
					</p>
					<% } else { %>
					<p class="quantity justify-content-end">
						<%= item.quantity %> available
					</p>
					<% } %>
					<p class="card-text">
						<i class="fas fa-tag"></i>
						<%= item.tag %>
					</p>
				</div>
				<div class="card-footer text-muted text-center">
					<a class="btn edit-btn" href="/inventory/<%= item._id %>/edit" role="button">
						Edit Item
					</a>
				</div>
			</div>
		</div>
		<% }); %>
	</div>
</div>

<%- include('../partials/footer'); -%>