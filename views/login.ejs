<%- include('partials/header'); -%>

<header class="masthead">
	<div class="container h-100">
		<div class="row h-100 justify-content-center align-items-center">
			<div class="col-sm-12 col-md-6">
				<div class="card">
					<h1 class="card-header blueDreams text-center py-4">Login</h1>
					<div class="card-body px-lg-5 pt-0">
						<form action="/login" method="POST">
							<div class="cForm">
								<input class="form-control" type="text" name="username" placeholder="Username" autofocus="autofocus" required>
							</div>
							<div class="cForm">
								<input class="form-control" type="password" name="password" placeholder="Password" required>
							</div>
							<div class="cForm">
								<button class="btn btn-outline-dark btn-lg btn-block">Login</button>
							</div>
						</form>
						<a href="/register" class="signup">Sign Up</a>
						<a href="/forgot" class="forgot float-right">Forgot Password?</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>

<%- include('partials/footer'); -%>